<%= stylesheet_link_tag "user_show.css" %>
<%= button_to "logout", destroy_user_session_path, method: :delete  %>
<h1>Display a user by id</h1>

<div class='user'>
        <div class="face-container">
          <img 
          class="face" 
          src=<%= @user.Photo %>
          alt="face" />
        </div>
        <div class="details">
            <h1><%= @user.Name %></h1>
            <h3>Number of posts : <%= @user.PostsCounter %></h3>
        </div>
    </div>
    <div class="bio">
        <h3>Bio</h3>
        <p><%= @user.Bio %></p>
    </div>
    <% @posts.each do |post| %>
    <div class="post">
        <h3><%= post.Title %>  </h3>
        <p><%= post.Text %></p>
        <div>
        <span>Comments: <%= post.CommentsCounter %></span>
        <span>Likes: <%= post.LikesCounter %></span>
        </div>
    </div>
    <% end %>

    <div class="btn">
        <button>
        <a href="/users/<%= @user.id %>/posts/">See all posts</a>
        </button>
    </div>