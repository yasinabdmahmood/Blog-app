<%= stylesheet_link_tag "post_index.css" %>
<h1>Display All the posts for a specific user</h1>
<div class='user'>
        <div class="face-container">
          <img 
          class="face" 
          src=<%= @user.Photo %>
          alt="face" />
        </div>
        <div class="details">
            <h1><%= @user.Name %></h1>
            <h3>Number of posts : <%= @user.PostsCounter %></h3>
        </div>
    </div>
    <% @posts.each do |post| %>
        <div>
          <div class="post">
            <h3><%= post.Title %></h3>
            <p><%= post.Text %></p>
            
          </div>
          
            <div class="comment-details">
            <% post.comments.each do |comment| %>
              <p><%= comment.author.Name %>: <%= comment.Text %></p>
            <% end %>
            </div>
          
        </div>
    <% end %>

    <div class="btn">
        <button>
            Pagination
        </button>
    </div>